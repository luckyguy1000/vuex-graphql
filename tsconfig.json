{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,

    "lib": [
      "dom",
      "es2015"
    ],

    "baseUrl": ".",

    "paths": {
      "*": ["*"]
    }
  },

  "include": [
    "src"
  ],

  "exclude": [
    "node_modules"
  ]
}
